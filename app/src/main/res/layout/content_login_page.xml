<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.idea.meter.Startup_Pages.login_page"
    tools:showIn="@layout/activity_login_page">

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/textbar_bg"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbar_bg"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password">

        <Button
            android:id="@+id/app_login"
            android:background="@drawable/left_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:text="Login" />

        <Button
            android:id="@+id/app_login_cancel_button"
            android:background="@drawable/right_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:text="Cancel" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/social_network_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password">

        <Button
            android:id="@+id/fb_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/fb_icon"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/gm_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gplus_icon"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

    <TextView android:id="@+id/signup_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/social_network_login_button"
        android:text="Sign Up, it's free!"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/app_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/signup_help_text"
        android:text="signup" />

</RelativeLayout>
