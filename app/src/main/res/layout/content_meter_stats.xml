<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.idea.meter.Meter_Utils.MeterStatsActivity"
    tools:showIn="@layout/activity_meter_stats">

    <ImageView
        android:id="@+id/graphView_stat"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/graph_holder" />

    <LinearLayout
        android:id="@+id/graph_stat_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/graphView_stat">

        <Button
            android:id="@+id/fuel_stat"
            android:background="@drawable/button_bg"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:text="Fuel Stats" />

        <Button
            android:id="@+id/distace_stat"
            android:background="@drawable/button_bg"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:layout_alignParentRight="true"
            android:text="Distance Stats" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/graph_stat_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/graph_stat_button_1">

        <Button
            android:id="@+id/tuning_stat"
            android:background="@drawable/button_bg"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:text="Tuning Stats" />

        <Button
            android:id="@+id/speed_stat"
            android:background="@drawable/button_bg"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:layout_alignParentRight="true"
            android:text="Speed Stats" />

    </LinearLayout>

</RelativeLayout>
